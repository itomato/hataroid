<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@drawable/gradient_drawable" >

        <TextView
            android:id="@+id/fb_curPathText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/padding_medium" />

        <ImageButton
            android:id="@+id/fb_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="@dimen/padding_smallest"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/btn_close" />

    </LinearLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:background="@drawable/bg_gradient"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="#66888888"
        android:dividerHeight="1px"
		android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@drawable/gradient_drawable"
        android:gravity="center" >

	    <Button
	        android:id="@+id/fb_clearDBBtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="168dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/clearDB" />
        
	    <Button
	        android:id="@+id/fb_refreshDBBtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="168dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/refreshDB" />
        
	    <Button
	        android:id="@+id/fb_selectBtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="168dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/select" />
	
	    <Button
	        android:id="@+id/fb_newFolderBtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="168dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/newfolder" />
    </LinearLayout>
	    
</LinearLayout>